<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -Loja</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SISTEMA LOJA INFORMÁTICA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @if (Session["usuarioLogado"] != null)
            {
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Início", "Index", "Home")</li>
                <li>@Html.ActionLink("Cliente", "Index", "Cliente")</li>
                <li>@Html.ActionLink("Funcionario", "Index", "Funcionario")</li>
                <li>@Html.ActionLink("Usuario", "Index", "Usuario")</li>
                <li>@Html.ActionLink("Produto", "Index", "Produto")</li>
                <li>@Html.ActionLink("Pagamento", "Index", "Pagamento")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Logout", "Login", "Login/Logout")</li>
                <li>@Html.ActionLink(Session["usuarioLogado"].ToString(), "Login", "Login/Logout")</li>
            </ul>

        </div>

            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Login", "Login", "Login")</li>
                </ul>
            }


        </div>
    </div>
    <div class="container body-content">
        @if (Session["usuarioLogado"] != null || HttpContext.Current.Request.AppRelativeCurrentExecutionFilePath.Contains("Login"))
        {
            @RenderBody()

        }
        else
        {
            Context.Response.Redirect("/Login/Login");
        }

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -WELLCITY- TODOS OS DIREITOS RESERVADOS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
