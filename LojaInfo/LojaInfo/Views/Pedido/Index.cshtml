@model IEnumerable<LojaInfo.Models.Pedido>

@{
    ViewBag.Title = "Lista de Pedidos";
}

<h2>Lista de Pedidos</h2>

<p>
    @Html.ActionLink("Novo Pedido", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodFunc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodCli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataPed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorPed)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodFunc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodCli)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataPed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorPed)
        </td>
        <td>
            @Html.ActionLink("Editar", "Alterar", new { cd = item.CodPed }) |
            @Html.ActionLink("Deletar", "Deletar", new { cd = item.CodPed })
        </td>
    </tr>
}

</table>
