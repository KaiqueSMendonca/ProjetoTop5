@model IEnumerable<LojaInfo.Models.ItensPedido>

@{
    ViewBag.Title = "Lista de itens";
}

<h2>Lista de itens</h2>

<p>
    @Html.ActionLink("Novo Item", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodPed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodProd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qtitem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorItem)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodPed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodProd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Qtitem)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorItem)
        </td>
        <td>
            @Html.ActionLink("Editar", "Alterar", new { CodPed = item.CodPed, CodProd = item.CodProd }) |
            @Html.ActionLink("Deletar", "Deletar", new { CodPed = item.CodPed, CodProd = item.CodProd })
        </td>
    </tr>
}

</table>
