@model IEnumerable<LojaInfo.Models.Produto>

@{
    ViewBag.Title = "Lista de produtos";
}

<h2>Lista de produtos</h2>

<p>
    @Html.ActionLink("Novo Produto", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LinkImg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeProd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescProd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorUnitario)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LinkImg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeProd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescProd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorUnitario)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Alterar", new { cd = item.CodProd }) |
            @Html.ActionLink("Deletar", "Deletar", new { cd = item.CodProd })
        </td>
    </tr>
}

</table>
