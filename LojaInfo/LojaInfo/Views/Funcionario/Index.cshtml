@model IEnumerable<LojaInfo.Models.Funcionario>

@{
    ViewBag.Title = "Lista de Funcionários";
}

<h2>Lista de Funcionários</h2>

<p>
    @Html.ActionLink("Cadastrar", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeFunc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TelFunc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeFunc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TelFunc)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Alterar", new { cd = item.CodFunc }) |
            @Html.ActionLink("Deletar", "Deletar", new { cd = item.CodFunc })
        </td>
    </tr>
}

</table>
